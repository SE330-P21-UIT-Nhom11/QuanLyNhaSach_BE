# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/your_database_name?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_DRIVER=com.mysql.cj.jdbc.Driver

# Connection Pool Configuration
DB_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQLDialect
HIBERNATE_DIALECT=org.hibernate.dialect.MySQLDialect

# SSL Configuration
SSL_TRUSTSTORE=classpath:ssl/truststore.jks
SSL_TRUSTSTORE_PASSWORD=changeit

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRATION=86400000

# Application Configuration
APP_NAME=quanlynhasach
SERVER_PORT=8080
